

<h1 class="text-2xl font-bold mb-4 text-center">Iniciar Sesión</h1>

<% if (errores.length) { %>
  <div class="bg-red-100 text-red-700 p-2 rounded mb-4">
    <% errores.forEach(error => { %>
      <p><%= error %></p>
    <% }) %>
  </div>
<% } %>

<form action="/login" method="POST" class="space-y-4 max-w-md mx-auto">
  <input type="email" name="email" placeholder="Email" required class="w-full p-2 border rounded" value="<%= datos.email || '' %>" />
  <input type="password" name="password" placeholder="Contraseña" required class="w-full p-2 border rounded" />
  <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">Ingresar</button>
</form>