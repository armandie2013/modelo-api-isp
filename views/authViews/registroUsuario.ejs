

<h1 class="text-2xl font-bold mb-4 text-center">Registro de Usuario</h1>

<% if (errores.length) { %>
  <div class="bg-red-100 text-red-700 p-2 rounded mb-4">
    <% errores.forEach(error => { %>
      <p><%= error %></p>
    <% }) %>
  </div>
<% } %>

<form action="/registro" method="POST" class="space-y-4 max-w-md mx-auto">
  <input type="text" name="nombre" placeholder="Nombre" value="<%= datos.nombre || '' %>" required class="w-full border p-2 rounded" />
  <input type="text" name="apellido" placeholder="Apellido" value="<%= datos.apellido || '' %>" required class="w-full border p-2 rounded" />
  <input type="email" name="email" placeholder="Email" value="<%= datos.email || '' %>" required class="w-full border p-2 rounded" />
  <input type="text" name="dni" placeholder="DNI" value="<%= datos.dni || '' %>" required class="w-full border p-2 rounded" />
