<div class="flex items-center justify-center bg-gray-100 px-4 py-12">
  <div
    class="w-full max-w-md sm:max-w-md md:max-w-lg lg:max-w-xl xl:max-w-xl 2xl:max-w-md border border-gray-300 shadow-md p-6 bg-white rounded-lg">

    <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Registro de Usuario</h1>

    <% if (errores.length) { %>
      <div class="bg-red-100 text-red-700 p-3 rounded mb-5 text-sm">
        <% errores.forEach(error=> { %>
          <p>
            <%= error %>
          </p>
          <% }) %>
      </div>
      <% } %>

        <form action="/registro" method="POST" class="space-y-5">
          <div>
            <input type="text" name="nombre" placeholder="Nombre" required value="<%= datos.nombre || '' %>"
              class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
          </div>

          <div>
            <input type="text" name="apellido" placeholder="Apellido" required value="<%= datos.apellido || '' %>"
              class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
          </div>

          <div>
            <input type="email" name="email" placeholder="Correo electrónico" required value="<%= datos.email || '' %>"
              class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
          </div>

          <div>
            <input type="text" name="dni" placeholder="DNI" required value="<%= datos.dni || '' %>"
              class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
          </div>

          <div>
            <input type="password" name="password" placeholder="Contraseña" required
              class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
          </div>

          <div>
            <input type="password" name="confirmarPassword" placeholder="Repetir Contraseña" required
              class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
          </div>

          <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition">
            Registrarse
          </button>
        </form>

  </div>
</div>