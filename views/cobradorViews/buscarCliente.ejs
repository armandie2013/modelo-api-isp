<main class="flex-1 flex items-center justify-center px-2 sm:px-4 py-8">
  <div class="w-full max-w-sm sm:max-w-3xl md:max-w-5xl lg:max-w-6xl bg-slate-900/90 backdrop-blur-sm rounded-xl shadow-2xl border border-slate-700 p-4 sm:p-6 md:p-10 text-white">

    <div class="w-full sm:w-1/2 md:w-1/3 mx-auto">
      <h1 class="text-xl sm:text-2xl font-bold text-center mb-6">
        Buscar Cliente
      </h1>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-red-100 border border-red-300 text-red-700 px-4 py-3 rounded mb-4 text-sm text-center">
          <%= error %>
        </div>
      <% } %>

      <form action="/cobros/buscar-cliente" method="get" class="space-y-4">
        <div>
          <label for="dni" class="block text-sm font-medium mb-1">DNI del Cliente</label>
          <input
            type="text"
            id="dni"
            name="dni"
            required
            placeholder="Ej: 12345678"
            class="w-full px-4 py-2 rounded-md bg-slate-800 text-white/70 placeholder-white/50 border border-slate-600 focus:outline-none focus:ring-2 focus:ring-blue-400 text-center text-sm transition"
          />
        </div>

        <div class="flex justify-center">
          <button
            type="submit"
            class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition"
          >
            Buscar
          </button>
        </div>
      </form>
    </div>

  </div>
</main>