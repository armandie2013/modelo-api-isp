<main class="flex-1 flex items-start justify-center min-h-[calc(100vh-200px)] px-2 sm:px-4 py-6 sm:py-8">
  <div class="w-full max-w-sm sm:max-w-3xl md:max-w-5xl lg:max-w-6xl bg-slate-900/90 backdrop-blur-sm rounded-xl shadow-2xl border border-slate-700 p-4 sm:p-6 md:p-10 text-white">

    <h1 class="text-2xl font-bold text-center mb-6">Confirmar Retiro</h1>

    <p class="mb-2 text-sm sm:text-base">
      <strong class="text-slate-300">Importe autorizado:</strong>
      <span class="text-green-400 font-semibold text-lg">
        <%= montoFormateado %>
      </span>
    </p>

    <p class="mb-6 text-sm sm:text-base">
      <strong class="text-slate-300">Autorizado por:</strong>
      <%= adminNombre %>
    </p>

    <form action="/retiros/confirmar-retiro" method="POST" class="space-y-4">
      <input type="hidden" name="codigo" value="<%= codigoAutorizacion %>">
      <button type="submit"
        class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition">
        Confirmar Retiro
      </button>
    </form>
  </div>
</main>