<main class="max-w-2xl mx-auto mt-10 bg-white shadow-xl rounded-xl p-8 border border-gray-200 text-gray-800">
  <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Generar Retiro</h1>

  <% if (typeof error !== "undefined") { %>
    <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4 border border-red-300 text-sm">
      <%= error %>
    </div>
  <% } %>

  <form action="/retiros/crear" method="POST">
  <input type="hidden" name="codigo" value="<%= codigoAutorizacion %>">
  <input type="hidden" name="importe" value="<%= montoFormateado %>">

  <div class="mb-4">
    <label class="block text-sm font-medium mb-1">Monto a retirar:</label>
    <input type="text" value="<%= montoFormateado %>" disabled class="w-full border border-gray-300 rounded-lg px-4 py-2 bg-gray-100 text-gray-800">
  </div>

  <div class="flex justify-between mt-6">
    <a href="/cobrador/panel" class="text-blue-600 hover:underline text-sm mt-2">â† Volver al panel</a>
    <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-2 rounded-lg shadow">
      Confirmar Retiro
    </button>
  </div>
</form>
</main>