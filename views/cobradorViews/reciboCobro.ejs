<div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg p-8 mt-8 text-gray-800">
  <h1 class="text-2xl font-bold mb-4 text-center">Recibo de Cobro</h1>

  <div class="mb-4">
    <p><strong>N° Comprobante:</strong>
      <%= cobro.numeroComprobante %>
    </p>
    <p><strong>Fecha:</strong>
      <%= new Date(cobro.fecha).toLocaleDateString() %>
    </p>
  </div>

  <div class="mb-4">
    <p><strong>Cliente:</strong>
      <%= cobro?.cliente?.nombre || '-' %> <%= cobro?.cliente?.apellido || '-' %>
    </p>
    <p><strong>DNI:</strong>
      <%= cobro?.cliente?.dni || '-' %>
    </p>
  </div>

  <div class="mb-4">
    <h2 class="font-semibold mb-2">Facturas cobradas:</h2>
    <table class="w-full table-auto text-sm border border-gray-300">
      <thead class="bg-gray-100 text-left">
        <tr>
          <th class="p-2 border">Tipo</th>
          <th class="p-2 border">N° Comp.</th>
          <th class="p-2 border">Detalle</th>
          <th class="p-2 border text-right">Importe ($)</th>
        </tr>
      </thead>
      <tbody>
        <% (cobro.facturasPagadas || []).forEach(f => { %>
          <tr>
            <td class="p-2 border"><%= f?.tipo || '-' %></td>
            <td class="p-2 border"><%= f?.numeroComprobante || '-' %></td>
            <td class="p-2 border"><%= f?.detalle || '-' %></td>
            <td class="p-2 border text-right"><%= f.importeFormateado %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <div class="mt-4 text-right font-bold text-lg">
    Total Cobrado: <%= cobro.totalCobradoFormateado %>
  </div>

  <div class="mt-6 text-center">
    <a href="/cobrador/panel" class="text-blue-600 hover:underline">Volver al panel</a>
  </div>
</div>