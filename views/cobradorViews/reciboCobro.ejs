<div class="max-w-3xl mx-auto mt-10 bg-white p-6 rounded-xl shadow border">
  <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Recibo de Cobro</h2>

  <div class="mb-4 text-sm text-gray-700">
    <p><strong>NÂ° Comprobante:</strong> <%= cobro.numeroComprobante %></p>
    <p><strong>Fecha:</strong> <%= new Date(cobro.fecha).toLocaleString() %></p>
    <p><strong>Cliente:</strong> <%= cobro.cliente.nombre %> <%= cobro.cliente.apellido %> - DNI <%= cobro.cliente.dni %></p>
    <p><strong>Cobrador:</strong> <%= cobro.cobrador.nombre %> <%= cobro.cobrador.apellido %></p>
  </div>

  <h3 class="text-lg font-semibold mt-4 mb-2">Facturas Pagadas</h3>
  <table class="w-full border text-sm mb-4">
    <thead class="bg-gray-100">
      <tr>
        <th class="p-2">#</th>
        <th class="p-2">Detalle</th>
        <th class="p-2">Importe</th>
      </tr>
    </thead>
    <tbody>
      <% cobro.facturasPagadas.forEach(item => { %>
        <tr class="border-t">
          <td class="p-2"><%= item.numeroComprobante %></td>
          <td class="p-2"><%= item.detalle %></td>
          <td class="p-2">$<%= item.importe.toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <p class="text-right text-lg font-bold">Total: $<%= cobro.totalCobrado.toFixed(2) %></p>

  <div class="mt-6 text-center">
    <a href="/cobros/buscar" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded">
      Realizar otro cobro
    </a>
  </div>
</div>