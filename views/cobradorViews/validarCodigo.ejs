<main class="max-w-xl mx-auto mt-10 bg-white p-6 rounded-lg shadow border border-gray-200 text-gray-800">
  <h1 class="text-xl font-bold text-center mb-6"><%= titulo %></h1>

  <% if (mensajeError && mensajeError.length > 0) { %>
    <div class="bg-red-100 border border-red-300 text-red-700 px-4 py-2 rounded mb-4 text-sm">
      <%= mensajeError %>
    </div>
  <% } %>

  <% if (mensajeExito && mensajeExito.length > 0) { %>
    <div class="bg-green-100 border border-green-300 text-green-800 px-4 py-2 rounded mb-4 text-sm">
      <%= mensajeExito %>
    </div>
  <% } %>

  <form method="POST" action="/retiros/procesar-retiro" class="space-y-4">
    <div>
      <label for="codigo" class="block text-sm font-medium">Código de autorización</label>
      <input type="text" name="codigo" id="codigo" required
        class="w-full border border-gray-300 px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
    </div>
    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded shadow hover:bg-green-700">
      Validar y Retirar
    </button>
  </form>
</main>