<div class="w-full px-4 sm:px-6 md:px-0">
  <div class="w-full max-w-sm mx-auto mt-12 bg-white p-6 sm:p-8 rounded-xl shadow-lg border border-gray-200">
    <h1 class="text-xl sm:text-2xl font-bold text-center text-gray-800 mb-4">
      <%= titulo %>
    </h1>

    <% if (mensajeError && mensajeError.length > 0) { %>
      <div class="bg-red-100 border border-red-300 text-red-700 px-4 py-3 rounded mb-4 text-sm">
        <%= mensajeError %>
      </div>
    <% } %>

    <% if (mensajeExito && mensajeExito.length > 0) { %>
      <div class="bg-green-100 border border-green-300 text-green-800 px-4 py-3 rounded mb-4 text-sm">
        <%= mensajeExito %>
      </div>
    <% } %>

    <form method="POST" action="/retiros/procesar-retiro" class="space-y-4">
      <div>
        <label for="codigo" class="block text-sm font-medium text-gray-700">Código de autorización</label>
        <input
          type="text"
          name="codigo"
          id="codigo"
          required
          inputmode="numeric"
          pattern="\d*"
          maxlength="6"
          placeholder="123456"
          class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm text-center"
        />
      </div>

      <div class="flex justify-center">
        <button
          type="submit"
          class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition"
        >
          Validar y Retirar
        </button>
      </div>
    </form>
  </div>
</div>