<main class="flex justify-center items-center min-h-screen bg-gray-100 px-4">
  <div class="bg-white w-full max-w-md p-8 rounded-2xl shadow-xl border border-gray-200">

    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Validar Código de Retiro</h1>

    <% if (mensajeError && mensajeError.length > 0) { %>
      <div class="bg-red-100 border border-red-300 text-red-700 px-4 py-3 rounded mb-4 text-sm">
        <%= mensajeError %>
      </div>
    <% } %>

    <% if (mensajeExito && mensajeExito.length > 0) { %>
      <div class="bg-green-100 border border-green-300 text-green-700 px-4 py-3 rounded mb-4 text-sm">
        <%= mensajeExito %>
      </div>
    <% } %>

    <form action="/retiros/procesar-retiro" method="POST" class="space-y-4">
      <div>
        <label for="codigo" class="block text-sm font-medium text-gray-700 mb-2">Código de autorización</label>
        <input
          type="text"
          id="codigo"
          name="codigo"
          required
          class="w-full border border-gray-300 px-3 py-2 rounded-lg"
        />
      </div>

      <div class="flex justify-center">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg shadow">
          Validar y Retirar
        </button>
      </div>
    </form>
  </div>
</main>