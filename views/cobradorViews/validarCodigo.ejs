<main class="flex-1 flex items-start justify-center min-h-[calc(100vh-200px)] px-2 sm:px-4 py-6 sm:py-8">
  <div class="w-full max-w-sm sm:max-w-3xl md:max-w-5xl lg:max-w-6xl bg-slate-900/90 backdrop-blur-sm rounded-xl shadow-2xl border border-slate-700 p-4 sm:p-6 md:p-10 text-white">

    <div class="w-full sm:w-1/2 md:w-1/3 mx-auto">
      <h1 class="text-xl sm:text-2xl font-bold text-center mb-6">
        <%= titulo %>
      </h1>

      <% if (mensajeError && mensajeError.length > 0) { %>
        <div class="bg-red-100 border border-red-300 text-red-700 px-4 py-3 rounded mb-4 text-sm text-center shadow">
          <%= mensajeError %>
        </div>
      <% } %>

      <% if (mensajeExito && mensajeExito.length > 0) { %>
        <div class="bg-green-100 border border-green-300 text-green-800 px-4 py-3 rounded mb-4 text-sm text-center shadow">
          <%= mensajeExito %>
        </div>
      <% } %>

      <form method="POST" action="/retiros/procesar-retiro" class="space-y-4">
        <div>
          <label for="codigo" class="block text-sm font-medium mb-1">Código de autorización</label>
          <input
            type="text"
            name="codigo"
            id="codigo"
            required
            inputmode="numeric"
            pattern="\d*"
            maxlength="6"
            placeholder="123456"
            class="w-full px-4 py-2 rounded-md bg-slate-800 text-white/70 placeholder-white/50 border border-slate-600 focus:outline-none focus:ring-2 focus:ring-green-500 text-center text-sm transition"
          />
        </div>

        <div class="flex justify-center">
          <button
            type="submit"
            class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition"
          >
            Validar y Retirar
          </button>
        </div>
      </form>
    </div>

  </div>
</main>