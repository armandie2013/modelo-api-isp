                  <!-- Menú Cliente -->
                  <div class="relative group">
                    <button class="text-sm text-blue-600 hover:underline focus:outline-none">
                      Cliente ▼
                    </button>
                    <div
                      class="absolute left-0 mt-2 bg-white border shadow-md rounded-md w-52 z-10 invisible opacity-0 group-hover:visible group-hover:opacity-100 transition-all duration-200">
                      <a href="/cliente/dashboard" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
