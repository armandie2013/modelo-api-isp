              <a href="/admin/dashboard" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                Panel de administración
              </a>
              <div class="border-t my-1"></div>
              <a href="/usuarios/cambiar-roles" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                Cambiar roles
              </a>
            </div>
          </div>
          <% } %>

            <% if (usuario.rol==='cobrador' ) { %>
              <!-- Menú Cobrador -->
              <div class="relative group">
                <button class="text-sm text-blue-600 hover:underline focus:outline-none">
                  Cobrador ▼
                </button>
                <div
                  class="absolute left-0 mt-2 bg-white border shadow-md rounded-md w-52 z-10 invisible opacity-0 group-hover:visible group-hover:opacity-100 transition-all duration-200">
                  <a href="/cobrador/panel" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                    Panel del cobrador
                  </a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-400 cursor-not-allowed">
                    Registrar pago (próximamente)
                  </a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-400 cursor-not-allowed">
                    Historial (próximamente)
                  </a>
                </div>
              </div>
