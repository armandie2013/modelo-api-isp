
  <div class="w-full max-w-xl bg-slate-800 text-white rounded-xl shadow-2xl border border-slate-700 p-8">
    <h1 class="text-2xl font-bold mb-6 text-center">Crear nuevo plan</h1>

    <% if (errores.length) { %>
      <div class="bg-red-600/20 text-red-300 p-3 rounded mb-5 text-sm border border-red-500">
        <% errores.forEach(error => { %>
          <p>• <%= error %></p>
        <% }) %>
      </div>
    <% } %>

    <form action="/planes/crear" method="POST" class="space-y-6">
      <!-- Nombre -->
      <div>
        <label for="nombre" class="block mb-1 text-sm font-semibold text-slate-200">Nombre del plan</label>
        <input type="text" id="nombre" name="nombre" placeholder="Nombre del plan" required
          value="<%= datos.nombre || '' %>"
          class="w-full bg-slate-700 text-white p-3 rounded border border-slate-600 focus:outline-none focus:ring-2 focus:ring-blue-500 placeholder-slate-400" />
      </div>

      <!-- Tipo -->
      <div>
        <label for="tipo" class="block mb-1 text-sm font-semibold text-slate-200">Tipo</label>
        <input type="text" id="tipo" name="tipo" placeholder="Tipo (ej: Fibra, Radio, etc.)" required
          value="<%= datos.tipo || '' %>"
          class="w-full bg-slate-700 text-white p-3 rounded border border-slate-600 focus:outline-none focus:ring-2 focus:ring-blue-500 placeholder-slate-400" />
      </div>

      <!-- Precio -->
      <div>
        <label for="precio" class="block mb-1 text-sm font-semibold text-slate-200">Precio en pesos</label>
        <input type="number" id="precio" name="precio" step="0.01" placeholder="Precio" required
          value="<%= datos.precio || '' %>"
          class="w-full bg-slate-700 text-white p-3 rounded border border-slate-600 focus:outline-none focus:ring-2 focus:ring-blue-500 placeholder-slate-400" />
      </div>

      <!-- Botón -->
<div class="pt-4 text-center">
  <button type="submit"
    class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition">
    Guardar Plan
  </button>
</div>
    </form>
  </div>
