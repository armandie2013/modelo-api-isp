<main class="flex justify-center items-start min-h-[calc(100vh-150px)] px-4">
  <div class="w-full max-w-4xl bg-slate-900/90 backdrop-blur-md border border-slate-700 rounded-xl shadow-2xl text-white p-6 sm:p-8 mt-6">

    <!-- Título -->
    <h1 class="text-2xl sm:text-3xl font-bold text-center mb-8">Planes disponibles</h1>

    <!-- Mensaje de éxito -->
    <% if (typeof exito !== 'undefined' && exito) { %>
      <div class="mb-6 p-4 text-green-300 bg-green-700/20 border border-green-400 rounded text-sm text-center">
        <%= exito %>
      </div>
    <% } %>

    <!-- Lista o mensaje -->
    <% if (planes.length === 0) { %>
      <p class="text-center text-slate-400">No hay planes cargados aún.</p>
    <% } else { %>
      <div class="overflow-x-auto rounded-md">
        <table class="w-full table-auto text-sm text-left text-slate-300">
          <thead class="bg-slate-800 text-slate-400 uppercase text-xs font-semibold">
            <tr>
              <th class="px-4 py-3">Nombre</th>
              <th class="px-4 py-3">Tipo</th>
              <th class="px-4 py-3">Precio</th>
              <th class="px-4 py-3">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% planes.forEach(plan => { %>
              <tr class="border-t border-slate-700 hover:bg-slate-800/50">
                <td class="px-4 py-2"><%= plan.nombre %></td>
                <td class="px-4 py-2"><%= plan.tipo %></td>
                <td class="px-4 py-2"><%= plan.precioFormateado %></td>
                <td class="px-4 py-2 space-x-2">
                  <a href="/planes/editar/<%= plan._id %>" class="text-blue-400 hover:underline text-sm">Editar</a>
                  <form action="/planes/eliminar/<%= plan._id %>" method="POST" class="inline">
                    <button type="submit" onclick="return confirm('¿Eliminar este plan?')" class="text-red-400 hover:underline text-sm">Eliminar</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>

    <!-- Botón -->
    <div class="mt-6 text-right">
      <a href="/planes/crear" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-5 rounded shadow text-sm">
        Crear nuevo plan
      </a>
    </div>

  </div>
</main>