<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Cambiar Roles de Usuarios</h1>
<% if (typeof exito !== 'undefined' && exito) { %>
  <div class="mb-4 p-4 text-green-700 bg-green-100 border border-green-300 rounded text-sm text-center">
    Los roles fueron actualizados correctamente.
  </div>
<% } %>
  <form action="/usuarios/cambiar-roles" method="POST" class="bg-white shadow-md rounded-lg p-6 max-w-4xl mx-auto space-y-4 border border-gray-200">
    <table class="w-full table-auto text-sm text-left text-gray-700">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-4 py-2">Nombre</th>
          <th class="px-4 py-2">Email</th>
          <th class="px-4 py-2">DNI</th>
          <th class="px-4 py-2">Rol</th>
        </tr>
      </thead>
      <tbody>
        <% usuarios.forEach(usuario => { %>
          <tr class="border-t">
            <td class="px-4 py-2"><%= usuario.nombre %></td>
            <td class="px-4 py-2"><%= usuario.email %></td>
            <td class="px-4 py-2"><%= usuario.dni %></td>
            <td class="px-4 py-2">
              <select name="<%= usuario._id %>" class="border-gray-300 rounded p-1 w-full">
                <option value="admin" <%= usuario.rol === 'admin' ? 'selected' : '' %>>Admin</option>
                <option value="cobrador" <%= usuario.rol === 'cobrador' ? 'selected' : '' %>>Cobrador</option>
                <option value="cliente" <%= usuario.rol === 'cliente' ? 'selected' : '' %>>Cliente</option>
              </select>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="text-right">
      <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded">
        Guardar Cambios
      </button>
    </div>
  </form>
</div>