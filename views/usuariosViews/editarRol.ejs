<div class="flex justify-center items-start min-h-[calc(100vh-150px)] px-4 py-10 sm:py-16">
  <div
    class="w-full max-w-xl bg-gradient-to-br from-slate-900/95 via-slate-900/90 to-slate-950/95
           backdrop-blur-md border border-slate-700/80 rounded-2xl shadow-2xl text-white
           p-6 sm:p-8"
  >

    <!-- Encabezado -->
    <header class="mb-6 sm:mb-8">
      <p class="text-xs sm:text-sm uppercase tracking-[0.25em] text-slate-400 mb-2 text-center">
        Usuarios
      </p>
      <h1 class="text-2xl sm:text-3xl font-extrabold text-center tracking-tight">
        Editar rol del usuario
      </h1>
      <p class="text-xs sm:text-sm text-slate-300 mt-2 text-center">
        Ajustá los permisos de acceso asignando el rol adecuado.
      </p>

      <!-- Badge rol actual -->
      <div class="mt-4 flex justify-center">
        <div
          class="inline-flex items-center gap-2 rounded-full bg-slate-800/80 border border-slate-600/80
                 px-3 py-1 text-[11px] sm:text-xs text-slate-200"
        >
          <span class="text-slate-400 uppercase tracking-wide">Rol actual</span>
          <% if (usuario.rol === 'admin') { %>
            <span class="px-2 py-0.5 rounded-full bg-blue-500/15 text-blue-300 border border-blue-400/50 text-[11px]">
              Admin
            </span>
          <% } else if (usuario.rol === 'cobrador') { %>
            <span class="px-2 py-0.5 rounded-full bg-red-500/15 text-red-300 border border-red-400/50 text-[11px]">
              Cobrador
            </span>
          <% } else { %>
            <span class="px-2 py-0.5 rounded-full bg-green-500/15 text-green-300 border border-green-400/50 text-[11px]">
              Cliente
            </span>
          <% } %>
        </div>
      </div>
    </header>

    <form action="/usuarios/editar/<%= usuario._id %>" method="POST" class="space-y-6">

      <!-- Datos de solo lectura -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-slate-300 mb-1">
            Nombre
          </label>
          <input
            type="text"
            value="<%= usuario.nombre %>"
            disabled
            class="w-full bg-slate-900/80 border border-slate-700 text-slate-400 rounded-lg px-3 py-2
                   text-sm cursor-not-allowed"
          />
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-300 mb-1">
            Email
          </label>
          <input
            type="text"
            value="<%= usuario.email %>"
            disabled
            class="w-full bg-slate-900/80 border border-slate-700 text-slate-400 rounded-lg px-3 py-2
                   text-sm cursor-not-allowed"
          />
        </div>
      </div>

      <!-- Selección de rol -->
      <div>
        <label class="block text-sm font-medium text-slate-300 mb-2">
          Rol asignado
        </label>
        <p class="text-xs text-slate-400 mb-3">
          Seleccioná el rol que define los permisos de este usuario dentro del sistema.
        </p>

        <div
          class="grid grid-cols-1 sm:grid-cols-3 gap-2 bg-slate-900/70 border border-slate-700/80
                 rounded-xl p-2"
        >
          <!-- Admin -->
          <label
            class="flex items-center justify-between gap-2 rounded-lg px-3 py-2 cursor-pointer
                   border border-transparent hover:border-blue-500/70 hover:bg-blue-500/5
                   text-xs sm:text-sm
                   <%= usuario.rol === 'admin' ? 'bg-blue-500/10 border-blue-500/70' : '' %>"
          >
            <span class="flex flex-col">
              <span class="font-medium text-blue-200">Admin</span>
              <span class="text-[11px] text-slate-400">Acceso completo</span>
            </span>
            <input
              type="radio"
              name="rol"
              value="admin"
              class="h-4 w-4 text-blue-500"
              <%= usuario.rol === 'admin' ? 'checked' : '' %>
            />
          </label>

          <!-- Cobrador -->
          <label
            class="flex items-center justify-between gap-2 rounded-lg px-3 py-2 cursor-pointer
                   border border-transparent hover:border-red-500/70 hover:bg-red-500/5
                   text-xs sm:text-sm
                   <%= usuario.rol === 'cobrador' ? 'bg-red-500/10 border-red-500/70' : '' %>"
          >
            <span class="flex flex-col">
              <span class="font-medium text-red-200">Cobrador</span>
              <span class="text-[11px] text-slate-400">Gestión de cobros</span>
            </span>
            <input
              type="radio"
              name="rol"
              value="cobrador"
              class="h-4 w-4 text-red-500"
              <%= usuario.rol === 'cobrador' ? 'checked' : '' %>
            />
          </label>

          <!-- Cliente -->
          <label
            class="flex items-center justify-between gap-2 rounded-lg px-3 py-2 cursor-pointer
                   border border-transparent hover:border-green-500/70 hover:bg-green-500/5
                   text-xs sm:text-sm
                   <%= usuario.rol === 'cliente' ? 'bg-green-500/10 border-green-500/70' : '' %>"
          >
            <span class="flex flex-col">
              <span class="font-medium text-green-200">Cliente</span>
              <span class="text-[11px] text-slate-400">Acceso limitado</span>
            </span>
            <input
              type="radio"
              name="rol"
              value="cliente"
              class="h-4 w-4 text-green-500"
              <%= usuario.rol === 'cliente' ? 'checked' : '' %>
            />
          </label>
        </div>
      </div>

      <!-- Botones -->
      <div class="flex flex-col sm:flex-row justify-end gap-3 pt-2">
        <a
          href="/usuarios/dashboard"
          class="inline-flex items-center justify-center px-4 py-2.5 rounded-lg text-sm font-medium
                 border border-slate-600 text-slate-200 bg-slate-900/70 hover:bg-slate-800
                 transition-colors"
        >
          ← Cancelar
        </a>

        <button
          type="submit"
          class="inline-flex items-center justify-center px-5 py-2.5 rounded-lg text-sm font-semibold
                 bg-blue-600 hover:bg-blue-700 text-white shadow-md hover:shadow-lg
                 transition-colors"
        >
          Guardar cambios
        </button>
      </div>
    </form>
  </div>
</div>
